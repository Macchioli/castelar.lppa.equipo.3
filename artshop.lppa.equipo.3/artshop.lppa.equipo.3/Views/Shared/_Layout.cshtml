<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ArtShop</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <header id="header">
            
        </header>
        <nav id="menu">
            <ul>
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/productos/Index">Productos</a></li>
                <li><a href="/home/about/">Acerca</a></li>
                <li><a href="/home/contact/">Contacto</a></li>
                <li><a href="/Artist/">Artistas</a></li>

            </ul>
            <ul>
                @Html.Partial("_LoginPartial")
            </ul>
        </nav>
        <section id="page">
            <article id="content">
                @RenderBody()
            </article>

            <article id="sidebar">
                <ul>
                    <li id="search">
                        <h2 class="search">Buscar artista</h2>
                        <form method="get" action="">
                            <fieldset>
                                <input type="text" id="search-text" name="s" value="" autocomplete="off" />
                                <input type="submit" id="search-submit" value="Buscar" />
                            </fieldset>
                        </form>
                    </li>
                    <li>
                        <h2 class="categories">Nuevos ingresos</h2>
                        <ul>
                            <li><a href="#">Picasso</a></li>
                            <li><a href="#">Rembrandt</a></li>
                        </ul>
                    </li>
                    <li>
                        <h2>Lo más vendido</h2>
                        <ul>
                            <li><a href="#">El beso - Klimt</a></li>
                        </ul>
                    </li>
                    <li>
                        <h2>Tendencias </h2>
                        <ul>
                            <li><a href="#">Joan Miró</a></li>
                        </ul>
                    </li>
                </ul>
            </article>
            <div style="clear: both; height: 1px"></div>
        </section>

        <footer id="footer">
            <p>&copy; @DateTime.Now.Year - ArtShop | Obras maestras a tu alcance</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
